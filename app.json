{
  "expo": {
    "name": "ACM",
    "slug": "ACM",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/fe_logo.png",
    "scheme": "facingapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "vn.com.fecredit.acm.uat",
      "googleServicesFile": "./GoogleService-Info.plist",
      "entitlements": {
        "aps-environment": "production"
      },
      "infoPlist": {
        "NSCameraUsageDescription": "HyperSnapSDK needs access to your camera so you can take awesome pictures.",
        "ITSAppUsesNonExemptEncryption": false,
        "NSUserTrackingUsageDescription": "We use notifications to keep you updated.",
        "UIBackgroundModes": ["remote-notification", "fetch"],
        "NSLocationWhenInUseUsageDescription": "This app uses your location to provide location-based features.",
        "NSLocationAlwaysUsageDescription": "We use your location even when the app is in the background to improve tracking accuracy.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow access to your location for full functionality, even when the app is not active."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#fff",
        "foregroundImage": "./assets/images/fe_logo.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.duc1809.FacingApp",
      "versionCode": 2,
      "googleServicesFile": "./google-services.json",
      "permissions": ["POST_NOTIFICATIONS"]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/fecreditlogo-removebg.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "extraPods": [
              { "name": "FirebaseCore", "modular_headers": true },
              { "name": "FirebaseCoreInternal", "modular_headers": true },
              { "name": "GoogleUtilities", "modular_headers": true }
            ]
          }
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/messaging"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "2b488c0a-1300-4eab-bb99-67029d616d3c"
      }
    }
  }
}
